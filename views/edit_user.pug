extends layout
block content
  h1= title
    p

    form(action='/user/edit/updateuser/'+id method='post')
      label(for='player') Player Name
      input(type='text' id='player' name='player') #{player_name}
      br
      label(for='char') Character Name
      input(type='text' id='char' name='char') #{char_name}
      br
      label(for='email') Email
      input(type='text' id='email' name='email') #{email}
      br
      label(for='active') Active
      input(type='checkbox' id='active' name='active') #{active}
      br
      label(for='admin') Admin
      input(type='checkbox' id='admin' name='admin') #{admin}
      br 
      input(type='submit' value='Update')

    p 

    if keywords
      ul
      each key in keywords
        li #{key}
    


